<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.camille.server.database.dao.MemoryDao">

    <sql id="selectFields">
        id, date, address, used, used_percent
    </sql>

    <sql id="insertFields">
        date, address, used, used_percent
    </sql>

    <select id="findAllByAddress" resultType="com.github.camille.server.database.entity.data.MemEntity">
        select <include refid="selectFields"></include>
        from memory_table
        where address = #{address}
        order by id
    </select>
    <select id="selectMinMaxMetricByAddress" resultType="com.github.camille.server.database.entity.statistic.MinMaxMemMetric">
        select min(used) as min_used, max(used) as max_used, min(used_percent) as min_used_percent, max(used_percent) as max_used_percent
        from memory_table
        where address = #{address}
    </select>
    <select id="selectLimitByAddress" resultType="com.github.camille.server.core.entity.MemoryEntity">
        select <include refid="selectFields"></include>
        from memory_table
        where address = #{address}
        order by id
        limit #{limit}
    </select>
    <select id="selectByColumn" resultType="java.lang.String">
        select ${columnName}
        from memory_table
        where address = #{address}
        limit #{limit}
    </select>

    <insert id="save" parameterType="com.github.camille.server.database.entity.data.MemEntity">
        insert into memory_table(<include refid="insertFields"></include>)
        values(#{date},#{address},#{used},#{usedPercent})
    </insert>

    <delete id="deleteAll">
        delete from memory_table
    </delete>


</mapper>