<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.camille.server.database.dao.ThreadRepository">

    <sql id="selectFields">
        id, date, address, name, total, runnable, timed_waiting, waiting
    </sql>

    <sql id="insertFields">
        date, address, name, total, runnable, timed_waiting, waiting
    </sql>

    <select id="findAllByAddressAndName" resultType="com.github.camille.server.database.entity.ThreadEntity">
        select <include refid="selectFields"></include>
        from thread_table
        where address = #{address}
        and name = #{name}
        order by id
    </select>

    <insert id="save" parameterType="com.github.camille.server.database.entity.ThreadEntity">
        insert into thread_table(<include refid="insertFields"></include>)
        values(#{date},#{address},#{name},#{total},#{runnable},#{timedWaiting},#{waiting})
    </insert>

    <delete id="deleteAll">
        delete from thread_table
    </delete>


</mapper>